{
    "compilerOptions": {
        "target": "es2021",
        "strict": true,
        "preserveConstEnums": true,
        "noEmit": true,
        "sourceMap": false,
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "models/**/*.ts",
        "services/**/*.ts",
        "handlers/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}